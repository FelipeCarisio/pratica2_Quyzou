<div id="containerJogar">

    <p id="tituloInfo">QUIZ</p>
    <p id="subTituloJogar">Selecione um dos jogos ao lado</p>

    <div id="teste" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>Pergunta</h4>

        @{
            IList<pratica2.Models.pergunta> p = pratica2.DAO.perguntaDAO.Lista();

            IList<pratica2.Models.resposta> r = pratica2.DAO.respostaDAO.Lista();

            pratica2.Models.pergunta[] pergUsu = new pratica2.Models.pergunta[50];

            int[] sorteados = new int[10];

            string[] corretas = new string[10];

            int i = 0;

            foreach (pratica2.Models.pergunta perg in p)
            {
                pergUsu[i] = perg;

                i++;

                if (i > 49)
                {
                    break;
                }
            }

            Random sorteio = new Random();

            int qts = 0;

            while(qts < 10)
            {
                int sorteado = sorteio.Next(24);

                if (!sorteados.Contains(sorteado))
                {

                    sorteados[qts] = sorteado;

                    qts++;

                    pratica2.Models.pergunta perg = pergUsu[sorteado];

                    pratica2.Models.resposta resp = new pratica2.Models.resposta();

                    resp = pratica2.DAO.respostaDAO.returnReposta(perg.Id);

                    corretas[qts - 1] = resp.Correta;

                    <p>@qts  - @perg.Texto</p>

                    <input type="radio" id="@qts" name="@qts  reposta" value="A"> @resp.OpcaoA<br>
                    <input type="radio" id="@qts" name="@qts  reposta" value="B"> @resp.OpcaoB<br>
                    <input type="radio" id="@qts" name="@qts  reposta" value="C"> @resp.OpcaoC<br>
                    <input type="radio" id="@qts" name="@qts  reposta" value="D"> @resp.OpcaoD<br>
                }
            }
        }

        </div>
        <div class="modal-footer">
            <a class="waves-effect waves-green btn-flat">Próxima</a>
            <center>

                <div id="perguntaBtn">
                    <btn class="waves-effect waves-light btn" href="login.html" id="btnFimLogin" onclick="somar()">Responder</btn>
                </div>
            </center>
        </div>
        </div>

    </div>

